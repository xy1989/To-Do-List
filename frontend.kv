<ToDoList>:
    orientation: "vertical"
    MDBoxLayout:
        orientation: "horizontal"
        padding: 20
        spacing: 10
        size_hint_y: .1
        MDIconButton:
            id: submit
            icon: "plus-box"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            user_font_size: "32sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.add_todo_list()
        MDTextFieldRound:
            id: input
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            normal_color: 0,0,0,0
            hint_text: "Type task to be done."
            text:
            multiline: False
    MDBoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.1
        padding: 10
        MDLabel:
            halign: "center"
            theme_text_color: "Secondary"
            font_style: "Button"
            md_bg_color: .78, .9, .8, 1
            text: "To Do"
        MDLabel:
            halign: "center"
            theme_text_color: "Secondary"
            font_style: "Button"
            text: "Completed"
        MDIconButton:
            icon: "trash-can-outline"
            theme_text_color: "Custom"
            text_color: .11, .37, .13, 1
            on_press: root.clear_complete_list()

    MDBoxLayout:
        orientation: "horizontal"
        ScrollView:
            MDList:
                id: scroll_list
        ScrollView:
            MDList:
                id: complete_list

<ListItemWithCheckBox>:
    text:
    IconLeftWidget:
        icon: root.icon
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_dark
    RightCheckbox:
        on_active:
            root.identifier = root.text
            app.root.remove_todo_list(root.identifier, root)

<CompletedList>:
    markup: True
    text:
    IconLeftWidget:
        icon: "check-bold"
        theme_text_color: "Custom"
        text_color: app.theme_cls.primary_light




