<ToDoList>:
    orientation: "vertical"
    MDBoxLayout:
        orientation: "horizontal"
        padding: 20
        size_hint_y: .1
        MDIconButton:
            id: submit
            icon: "android"
            user_font_size: "64sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.add_record()
        MDTextFieldRound:
            id: input
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            normal_color: 1, 1, 1, 1
            hint_text: "Type task to be done. Hit Enter to add to list."
            text:
            multiline: False
    ScrollView:
        MDList:
            id: scroll_list
            OneLineIconListItem:
                text: "Example"
                IconLeftWidget:
                    icon: "reminder"

<ListItemWithCheckBox>:
    IconLeftWidget:
        icon: root.icon
    RightCheckbox


